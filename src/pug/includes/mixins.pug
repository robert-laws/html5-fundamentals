mixin mainNav()
  ul#main-menu
    for menuItem in menuItems
      li(id= menuItem.itemId)
        a(href= menuItem.itemLink)= menuItem.itemAnchor

mixin topNav()
  ul#top-nav
    for navItem in navLinks
      li(id= navItem.navId)
        a(href= navItem.navLink)= navItem.navText

mixin skillinfo(skillTitle, skillDesc, src)
  h2= skillTitle
  p= skillDesc

  img.skill-icon(src= src)

mixin skills(...items)
  ul(class= 'skills')
    each item in items
      li= item